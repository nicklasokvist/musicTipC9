@model MusicTipViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="header clearfix"></div>

<div class="jumbotron">
    <h2>Get listening tips from Spotify!</h2>
    <div>
        Serach and Select Artist to get listening recommendations from Spotify in a few simple steps!
        <div class="small">
            1. Search Artist<br />
            2. Select Artist<br />
            <strong>3. View recommendations!</strong><br />
            <br />
            Optional:<i> Modify selection by selecting Genres(s) and/or Track(s) and/or new Artist (with Genre and Track options).</i><br />
            <br />
        </div>
    </div>
    <div class="row marketing">
        <div class="col-lg-12">
            <div>
                <form action="@Url.Action("SearchArtist")" method="post">
                    <input type="text" name="SearchArtist">
                    <input type="submit" class="btn btn-primary " value="Search Artist" />
                </form>
            </div>
        </div>
    </div>
</div>



<div class="row marketing">
    <div class="col-lg-4">
        @if (Model.Artists != null)
        {
            <div class="col-md-4">
                @Html.Partial("ArtistsResponse")
            </div>
        }
    </div>

    <div class="col-lg-4">
        @if (Model.Tracks != null)
        {
            <div id="TopTracks" class="col-md-4">
                @Html.Partial("TopTracks")
            </div>
        }
    </div>

    <div class="col-lg-4">
        @if (Model.Genres != null)
        {
            <div class="col-md-4">
                @Html.Partial("Genres")
            </div>
        }
    </div>
</div>

<div class="row marketing">
    @if (Model.Recommendations != null)
    {
        <div class="col-md-12">
            @Html.Partial("Recommendations")
        </div>
        @*@if (Model.SelectionSeeds != null)
        {
            <div class="col-md-12">
                @Html.Partial("SearchCriteria")
            </div>
        }*@

    }
</div>
